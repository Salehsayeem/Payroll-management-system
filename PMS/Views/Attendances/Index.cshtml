@using Vereyon.Web
@model IEnumerable<PMS.Models.Attendance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", "Create", new { @class = "btn btn--radius btn--green" })
</p>
<br />
<p>

    @Html.ActionLink("Download Pdf", "DownloadPdf", "DownloadPdf", new { @class = "btn btn--radius btn--green" })
</p>
@Html.RenderFlashMessages()
<br />
<h3 class="card-title text-center">List of Attendances</h3>
<table id="AttendanceTable" class="table table-responsive table-hover table-bordered" style="background-color: aquamarine">
    <thead>
        <tr>
            <th>
                Employee Code
            </th>
            <th>
                Date
            </th>
            <th>
                Status
            </th>
            <th>
                Remarks
            </th>
            <th>
                Action
            </th>
            <th>
                Action
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tbody>
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendanceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendanceStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendanceRemarks)
                </td>
                <td>
                    @Html.ActionLink("Update", "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        </tbody>

    }

</table>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#AttendanceTable').DataTable({
                "searching": true,
                "ordering": false,
                //"scrollY": "200px"
                "scrollCollapse": false
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>


}
