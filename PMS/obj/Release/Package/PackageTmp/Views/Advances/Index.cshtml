@model IEnumerable<PMS.Models.Advance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create", "Create", new { @class = "btn btn--radius btn--green" })
</p>
<br/>
<p>
    
    @Html.ActionLink("Download Pdf", "DownloadPdf", "DownloadPdf", new { @class = "btn btn--radius btn--green" })
</p>
<br/>
<h3 class="card-title text-center">List of Advances</h3>
<table id="AdvanceTable" class="table table-responsive table-hover table-bordered" style="background-color: aquamarine">
    <thead>
        <tr>
            <th>
                Employee Code
            </th>
            <th>
                Date
            </th>
            <th>
                Reason
            </th>
            <th>
                Amount
            </th>
            <th>
               Status
            </th>
            <th>
                Action
            </th>
            <th>
                Action
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
<tr>
    @if (item.AdvanceStatus == "InActive")
    {
        <td style="text-decoration: line-through">
            @Html.DisplayFor(modelItem => item.Employee.Code)
        </td>
        <td style="text-decoration: line-through">
            @Html.DisplayFor(modelItem => item.AdvanceDate)
        </td>
        <td style="text-decoration: line-through">
            @Html.DisplayFor(modelItem => item.AdvanceReason)
        </td>
        <td style="text-decoration: line-through">
            @Html.DisplayFor(modelItem => item.AdvanceAmount)
        </td>
        <td style="text-decoration: line-through">

            @Html.DisplayFor(modelItem => item.AdvanceStatus)
        </td>
    }
    
    else{
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdvanceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdvanceReason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdvanceAmount)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.AdvanceStatus)
        </td>
    }
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })

    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>



@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#AdvanceTable').DataTable({
                "searching": true,
                "ordering": true,
                //"scrollY": "200px",
                "scrollCollapse": true
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
    
  
}