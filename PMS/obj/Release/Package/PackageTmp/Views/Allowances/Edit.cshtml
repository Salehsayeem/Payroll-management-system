@model PMS.Models.Allowance

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
    <div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Edit Allowance</h2>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-row">
                    <div class="name">Type</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AllowanceType, new { htmlAttributes = new { @class = "input--style-5" } })
                        @Html.ValidationMessageFor(model => model.AllowanceType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="name">Amount</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AllowanceAmount, new { htmlAttributes = new { @class = "input--style-5" } })
                        @Html.ValidationMessageFor(model => model.AllowanceAmount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="name">Status</div>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.AllowanceStatus, new[]
                        {
                            new SelectListItem(){Text = "Active",Value = "Active"},
                            new SelectListItem(){Text = "InActive",Value = "InActive"},
                        }, "Select Status", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AllowanceStatus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div>
                        <button class="btn btn--radius-2 btn--blue" type="submit">Save</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    <button class="btn btn--radius btn--white"> @Html.ActionLink("Back to List", "Index")</button>
</div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
