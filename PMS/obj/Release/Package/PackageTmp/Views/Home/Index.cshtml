@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Manager"))
    {
        <div class="jumbotron-fluid">
        @Html.ActionLink("Hello " + User.Identity.GetUserName() + " . You have logged in as Manager", "", "",new{@style= "font-size:40px; text-align:center;" })
        </div>
    }
    if (User.IsInRole("Admin"))
    {
        <div class="jumbotron-fluid">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + " . You have logged in as Admin", "", "",new{@style= "font-size:40px; text-align:center;" })
        </div>
    }
}
    
