@model IEnumerable<PMS.Models.Attendance>

@{
    ViewBag.Title = "AttendanceEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script type="text/javascript">

        var $j = $.noConflict(true);
    </script>
    <script type="text/javascript">

        $j("#datepicker").datepicker({
            autoclose: true,
            todayHighlight: true,
            format: "dd/ mm/ yyyy"
        });
    </script>
    <script type="text/javascript">

        $j("#datepicker1").datepicker({
            autoclose: true,
            todayHighlight: true,
            format: "dd/ mm/ yyyy"
        });
    </script>
}

<h2>AttendanceEmployee</h2>



<div class="container">
    @using (Html.BeginForm("AttendanceEmployee", "Attendances", FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-2 text-lg-left"><label>From Date</label></div>
            <div class="col-sm-3">

                <input type="date" id="datepicker" name="From" class="form-control" placeholder="Select Date" />
            </div>
            <div class="col-sm-2"><label>To Date</label></div>
            <div class="col-sm-3">

                <input type="date" id="datepicker1" name="To" class="form-control" placeholder="Select Date" />
            </div>
            <div class="col-sm-2">
                <input type="submit" value="Seach" class="btn btn-primary form-control" />
            </div>
            <br /><br />
        </div>
        <div class="row">
            <table class="table table-bordered">
                <tr>
                    <th style="width:33%">
                        @Html.DisplayNameFor(model => model.Employee.Name)
                    </th>
                    <th style="width:33%">
                        @Html.DisplayNameFor(model => model.AttendanceDate)
                    </th>
                    <th style="width:33%">
                        @Html.DisplayNameFor(model => model.AttendanceStatus)
                    </th>
                    @*<th></th>*@
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceStatus)
                        </td>
                    </tr>

                }

            </table>
        </div>
    }
</div>  